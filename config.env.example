# Track and Trace Service Configuration Template
# Copy this file to config.env and update with your actual values

# ===================================================
# EMAIL CONFIGURATION
# ===================================================

# IMAP server settings
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USE_SSL=true

# Email credentials
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email filtering
EMAIL_SUBJECT_FILTER=Track and Trace
EMAIL_FOLDER=INBOX

# ===================================================
# DATABASE CONFIGURATION
# ===================================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trackandtrace
DB_USERNAME=trackandtrace
DB_PASSWORD=your-secure-password

# Database schema and table settings
DB_TEMP_SCHEMA=temp_processing
DB_TARGET_TABLE=tracking_data
DB_UNIQUE_KEY=hawb

# ===================================================
# PROCESSING CONFIGURATION
# ===================================================

# Directory settings
APP_BASE_DIR=/var/lib/trackandtrace

# Processing settings
MAX_CONCURRENT_JOBS=1
SCHEDULE_INTERVAL_HOURS=1
FILE_RETENTION_DAYS=30

# ===================================================
# APPLICATION CONFIGURATION
# ===================================================

# Application settings
DEBUG=false
LOG_LEVEL=INFO

